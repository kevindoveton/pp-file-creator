html(ng-app="ppfilecreator")
  head
    meta(charset='utf8')
    meta(name="viewport" content="width=device-width, initial-scale=1")
    base(href='/')
    title PP File Creator 
    link(rel="stylesheet" type="text/css" href="/css/styles.css")
    link(rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:400,500,700")


  body(ng-controller='AppCtrl')
    div.title.noPrint(ng-show="showHeader")
      h2 Intriguing Name
    div.bodyContent
      block body

    div.footer.noPrint(ng-show="showFooter")
      div.navigation
        ul
          li
            a(ui-sref="home")
              p Home
          li
            a(ui-sref="templates")
              p Templates
          li
            a(ui-sref="files")
              p Files

    script(src='/js/vendor.js')
    script(src='/js/dist.js')
